    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@api/data-access-user": ["libs/api/data-access-user/src/index.ts"],
      "@api/feature-user": ["libs/api/feature-user/src/index.ts"],
      "@shared/domain": ["libs/shared/domain/src/index.ts"],
      "@spartan-ng/ui-button-helm": ["libs/ui/ui-button-helm/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
